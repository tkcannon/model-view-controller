<article>
    <div class="post">
        <div class="post-title">
            <h3>{{title}}</h3>
        </div>
        <div class="post-body">
            <p class="post-text">{{text}}</p>
            <div class="meta">
                <p>{{comments.length}} {{format_plural "comment" comments.length}}<p>
                <p> Posted by {{user.username}} on {{format_date created_at}} </p>
            </div>
        </div>
    </div>
</article>