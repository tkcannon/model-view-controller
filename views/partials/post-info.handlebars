<article>
    <div class="post">
        <h3 class="post-title">{{title}}</h3>
        <div class="meta">
            {{user.username}}
            {{format_date created_at}}
        </div>
        <p class="post-text">{{text}}</p>
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>