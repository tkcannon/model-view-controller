<section>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div class="post">
            <div class="post-title">
                <h3>{{post.title}}</h3>
            </div>
            <div class="post-body">
                <div class="post-text">
                    <input class="w-100" name="post-text" type="text" value="{{post.text}}" />
                </div>
                <div class="post-controls">
                    <button class="w-100" type="submit">Save Post</button>
                    <button class="w-100 delete-post-btn" type="button">Delete Post</button>
                </div>
                <div class="meta">
                    <p>{{post.comments.length}} {{format_plural "comment" post.comments.length}}</p>
                    <p> Posted by {{post.user.username}} on {{format_date post.created_at}} </p>
                </div>
            </div>
        </div>
    </form>
</section>

<section>
    {{>comments post.comments}}
</section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>